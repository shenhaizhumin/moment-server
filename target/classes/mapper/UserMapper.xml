<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- 这里填写对应的Dao文件所在的路径 -->
<mapper namespace="cn.example.moment.dao.UserMapper"    >
    <!-- 填写数据库里实例UserEntity对应的表的表名 -->
    <!-- 这里是作为一个变量使用 -->
    <sql id="table">user_info</sql>

    <!-- id属性填写Dao文件里的函数名称 xxType是参数或是结果的类型根据情况填写 -->
    <!-- 查询所有   -->
    <select id="getAll" resultType="cn.example.moment.pojo.UserEntity">
        SELECT
        *
        FROM
        <include refid="table" />
    </select>


    <!-- 根据id查询 -->
    <select id="getUserById" resultType="cn.example.moment.pojo.UserEntity">
        SELECT
        *
        FROM
        <include refid="table"/>
        WHERE
        id = #{id}
    </select>

    <select id="getUserByUsername" resultType="cn.example.moment.pojo.UserEntity">
        SELECT
        *
        FROM
        <include refid="table"/>
        WHERE
        username = #{username}
    </select>

    <!-- 增 -->
    <insert id="insert" parameterType="cn.example.moment.pojo.UserEntity">
        INSERT INTO
        <include refid="table"/>
        (username,mobile)
        VALUES
        (#{username},#{mobile})
    </insert>

    <!-- 改 -->
    <update id="update" parameterType="cn.example.moment.pojo.UserEntity">
        UPDATE
        <include refid="table"/>
        SET
        <!--<if test="name != null">name = #{name}</if>-->
        username  = #{username},mobile = #{mobile},email = #{email},nickname=#{nickname},
        latest_time=#{latest_time},latest_ip=#{latest_ip},avatar_url=#{avatar_url},moment_image=#{moment_image}
        WHERE
        id = #{id}
    </update>

    <!-- 删 -->
    <delete id="delete" parameterType="cn.example.moment.pojo.UserEntity">
        DELETE FROM
        <include refid="table"/>
        WHERE
        id = #{id}
    </delete>
</mapper>